            <entry key="Accept" value="text/xml, application/xml"/>
            <entry key="Authorization" value="Intuit_IAM_Authentication intuit_appid=Intuit.payments.sdk_test,intuit_app_secret=PaymentsSDKTestApp"/>
            <entry key="intuit_tid" value="ACTCODEJAME-2312312312312"/>
